; application settings
gauss:
  domain = import:gauss.shapes.circle
  integrand = import:gauss.functors.one
  integrator = import:gauss.integrators.montecarlo

  ; montecarlo integrator
  integrators.montecarlo:
    samples = 1e5

  ; circles
  shapes.circle:
    radius = 1.0
    center = (0.0, 0.0)

  ; the gaussian
  functors.gaussian:
    μ = (0,0)
    σ = 1.0

; end of file
